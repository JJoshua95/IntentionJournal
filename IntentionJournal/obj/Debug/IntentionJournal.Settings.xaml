<?xml version="1.0" encoding="UTF-8"?>
<ContentPage x:Class="IntentionJournal.Settings"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 Title="Settings"
			 BackgroundColor="White">
<ContentPage.Content>
		<TableView x:Name="settingsTable" Intent="Settings">
			<TableRoot>
				<TableSection Title="Manage Quotes">
					<TextCell Text="Add Quote" Tapped="addQuoteCellSelected"/>
					<TextCell Text="View/Edit Quotes" Tapped="viewQuotesCellSelected"/>
				</TableSection>
				<TableSection Title="Manage Data">
					<TextCell Text="Clear all Entries" Tapped="clearEntriesCellSelected"/>
          			<TextCell Text="Clear all Quotes" Tapped="clearQuotesCellSelected"/>
				</TableSection>
			</TableRoot>
		</TableView>
	</ContentPage.Content>
</ContentPage>
