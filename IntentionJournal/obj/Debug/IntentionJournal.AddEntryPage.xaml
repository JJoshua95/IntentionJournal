<?xml version="1.0" encoding="UTF-8"?>
<ContentPage x:Class="IntentionJournal.AddEntryPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="20"
			 Title="Write your entry">
  <StackLayout x:Name="stacklayout">
    <Label Text="Title:" />
    <Entry x:Name="titleInput"/>
	<Label Text="Text:"/>
    <Editor x:Name="contInput" HeightRequest="275" BackgroundColor="#FEF5E7"/>
	<Label Text="Mood:"/>
	<Picker x:Name="moodPicker" />
  </StackLayout>
</ContentPage>