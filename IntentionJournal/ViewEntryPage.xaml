<?xml version="1.0" encoding="UTF-8"?>
<ContentPage x:Class="IntentionJournal.ViewEntryPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="20"
			 Title="Edit your entry">
	<ScrollView Orientation="Vertical">
  		<StackLayout x:Name="stacklayout">
    		<Label x:Name="moodLabel" Text="{Binding entryCategory}"/>
    		<Entry x:Name="titleInputEdit" Text ="{Binding entryTitle}"/>
    		<Editor x:Name="contInputEdit" Text ="{Binding entryContent}" HeightRequest="300" BackgroundColor="#FEF5E7"/>
			<Button x:Name="changeImageButton" BackgroundColor ="{StaticResource buttonColor}" Text="Change Picture" Clicked="pickGalleryImage"/>
			<Image x:Name="editImage"/>
			<Button x:Name="deleteImageButton" BackgroundColor ="{StaticResource buttonColor}" Text="Delete Picture" Clicked="DeletePicture"/>
			<Button x:Name="SaveEdit" BackgroundColor ="{StaticResource buttonColor}" Text="Save" Clicked="onSaveClicked"/>
			<Button x:Name="deleteEdit" BackgroundColor ="{StaticResource buttonColor}" Text="Delete" Clicked="onDeleteClicked"/>
  		</StackLayout>
	</ScrollView>
</ContentPage>
