<?xml version="1.0" encoding="UTF-8"?>
<ContentPage x:Class="IntentionJournal.BrowseMoodsPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="20"
			 Title="Browse">
	<StackLayout x:Name="StackLayoutMap">
		<Label HorizontalOptions="Center"
           Text="Browse"
           VerticalOptions="CenterAndExpand"/>
		<Button Text="Journal" Clicked="OnJournalButtonClicked" VerticalOptions="CenterAndExpand"/>
		<Grid x:Name="gridView" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
			<Grid.RowDefinitions>
      			<RowDefinition Height="*" />
      			<RowDefinition Height="*" />
    		</Grid.RowDefinitions>
    		<Grid.ColumnDefinitions>
      			<ColumnDefinition Width="*" />
      			<ColumnDefinition Width="*" />
    		</Grid.ColumnDefinitions>
			<Label Text="Happy"
           	 Grid.Row="0" Grid.Column="0"
           	 TextColor="White"
           	 BackgroundColor="Navy" />
			<Label Text="Grateful"
           	 Grid.Row="0" Grid.Column="1"
           	 TextColor="White"
           	 BackgroundColor="Maroon" />
			<Label Text="Inspired"
           	 Grid.Row="1" Grid.Column="0"
           	 TextColor="White"
           	 BackgroundColor="Teal" />
			<Image Source="settings.png" Grid.Row="1" Grid.Column="1">
    			<Image.GestureRecognizers>
        			<TapGestureRecognizer
                	Tapped="OnTapGestureRecognizerTapped"
                	NumberOfTapsRequired="2" />
  				</Image.GestureRecognizers>
			</Image>
		</Grid>
		<!--<Button Text = "Add Entry" Clicked="addEntry" VerticalOptions="CenterAndExpand" />-->
	</StackLayout>
</ContentPage>

